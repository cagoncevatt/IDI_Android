<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content" android:layout_marginStart="30dp"
    android:background="@android:drawable/picture_frame"
    android:layout_marginBottom="-5dp"
    android:layout_marginTop="-3dp"
    android:layout_marginEnd="-6dp">

    <TextView
        android:text=""
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/bookTitle"
        android:layout_weight="1"
        android:layout_marginStart="@dimen/abc_action_bar_default_padding_material"
        android:layout_marginEnd="@dimen/abc_action_bar_default_padding_material"
        android:lines="1"
        android:textColor="@color/background_floating_material_dark" />

    <Button
        android:id="@+id/add_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:text="PH"
        style="@style/Widget.AppCompat.Button.Small" />
</LinearLayout>
